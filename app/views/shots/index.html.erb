<div class= "container">
  <div class= 'shots'>
    <% @shots.each do |shot| %>
      <div class= 'col-md-4'>
        <div class= "shot-grid-item">
          <div class="shot-wrapper">
            <%= link_to shot, class: "shot" do %>
            <%= image_tag(shot.user_shot_url, class: "image", width:'100%') %>
            <div class="shot-data">
              <h3 class="shot-title"><%= shot.title %></h3>
              <div class="shot-description"> <%= truncate( shot.description, length: 60) %></div>
              <div class="shot-time"> <%= time_ago_in_words(shot.created_at) %> ago </div>
            <% end %>
            </div>
      <%= link_to 'delete', shot, method: :delete, data: {confirm: 'u dead ass' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


